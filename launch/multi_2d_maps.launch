    <param name="frame_id" value="/map"/>
  </node>

  <node name="arm_costmap" pkg="costmap_2d" type="costmap_2d_node" output="screen">
    <rosparam file="$(find multi_2d_navigation)/maps/costmaps/arm_costmap.yaml" command="load" ns="costmap"/>
  </node>
-->
</launch>
