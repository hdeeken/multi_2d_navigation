    <param name="frame_id" value="/map"/>
  </node>

  <node pkg="costmap_2d" type="costmap_2d_node" name="spine_costmap" output="screen">
    <rosparam file="$(find multi_2d_navigation)/maps/costmaps/spine_costmap.yaml" command="load" ns="costmap" />
  </node>
-->
